{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "removeComments": true,        
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "target": "es6",
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./src/public/"
    ]
}